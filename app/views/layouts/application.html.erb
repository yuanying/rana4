<!DOCTYPE html>
<html>
<head>
  <title>Rana4</title>
  <%#= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'jquery-ui-1.8.5.custom' %>
  <% if Rails.env  == 'production '%>
  <%= stylesheet_link_tag 'rana4' %>
  <% else %>
  <link href="/stylesheets/rana4.css" media="screen" rel="stylesheet" type="text/css" />
  <% end %>
  <%= stylesheet_link_tag 'jHtmlArea' %>
  <script type='text/javascript'>
  var Rana = { 
    root_path : '<%=root_path%>',
    waiting_image_path : '<%= image_path("ajax-loader.gif")%>',
    <%- if @site -%>
    new_attachment_path : '<%=new_site_attachment_path(@site)%>',
    <%- end -%>
    dummy : null
  };
  </script>
  <%= javascript_include_tag 'jquery.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.5.custom.min' %>
  <%= javascript_include_tag 'jHtmlArea-0.7.0' %>
  <%= javascript_include_tag :defaults %>
  <meta name='wl-screen-id' content='<%=@screeen_id%>' />
  <%= csrf_meta_tag %>
</head>
<body>
  
  <div id='site'>
    <h1>RanaPrunus</h1>
    <p class='description'><%=t '.description'%></p>
    <% if @site %>
    <%= render :partial => 'sites/nav', :locals => { :site => @site }%>
    <% end %>
  </div>

<div id='page'><%= yield %></div>

<div id='publication'>
  <address>&copy; 2007-<%=Time.now.strftime('%Y')%> Yuanying all right reserved.</address>
</div>

</body>
</html>
