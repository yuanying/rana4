<h1>Listing sites</h1>

<table>
  <tr>
    <th><%=t 'activerecord.attributes.site.title'%></th>
    <th><%=t 'activerecord.attributes.site.url'%></th>
    <th><%=t 'activerecord.attributes.site.path'%></th>
    <th><%=t 'activerecord.attributes.site.timezone'%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.title %></td>
    <td><%= site.url %></td>
    <td><%= site.path %></td>
    <td><%= site.timezone %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

